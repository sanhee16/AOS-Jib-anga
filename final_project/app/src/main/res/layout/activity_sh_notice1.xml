<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".detail_text"
        android:weightSum="10"
        android:orientation="vertical">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="#fff"
    >

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3"

                android:gravity="center|left"
        >

            <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.5"/>
            <ImageButton
                    android:layout_weight="1.5"
                    android:scaleType="fitCenter"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:background="#FFF"
                    app:srcCompat="@drawable/backblack"
                    android:id="@+id/imgbtn_back"
                    android:layout_marginTop="5dp"
            />
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.5"/>
        </LinearLayout>
        <ImageView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@drawable/top2"
        />
    </FrameLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="0.05"
            android:background="@drawable/boarder_bottom"
    >

    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="10"
            android:layout_weight="8.95"
    >
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="8"
                android:background="#FFFFFF"

        >
            <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/txt_titile_detail_sh"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"
                    android:textSize="22dp"
                    android:text="집안가 어플 사용법"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"

        >
            <TextView
                    android:text="2018.12.11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/txt_date"
                    android:gravity="right"
                    android:textColor="#fd848484"
                    android:background="@drawable/detail_bottom"
            />
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8.65"
                android:weightSum="7"
                android:background="#FFF"
        >
            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7"
            >

                <LinearLayout
                        android:layout_marginTop="11dp"
                        android:weightSum="1"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                    <ImageView
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="269dp" app:srcCompat="@drawable/not1"
                            android:id="@+id/imageView2"/>
                    <ImageView
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="294dp" app:srcCompat="@drawable/not2"
                            android:id="@+id/imageView4"/>
                    <ImageView
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="294dp" app:srcCompat="@drawable/not3"
                            android:id="@+id/imageView5"/>
                    <ImageView
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="270dp" app:srcCompat="@drawable/not4"
                            android:id="@+id/imageView6"/>
                    <ImageView
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            app:srcCompat="@drawable/not5"
                            android:id="@+id/imageView7"/>
                    <Space
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                    />
                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
