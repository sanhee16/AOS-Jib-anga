<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/boarderrec"
        android:weightSum="5"
        android:orientation="vertical"
        android:gravity="center">

    <TextView
            android:text="용인경찰서 보정지구대"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/name"
            android:gravity="center"
            android:layout_weight="1.5"
            android:textColor="#ff7070"
            android:textSize="22sp"/>

    <TextView
            android:text="경기도 용인시 기흥구 보정동 1255-3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/address"
            android:gravity="center"
            android:layout_weight="1.2"
            android:textSize="15sp"/>
    <TextView
            android:text="010-3581-3256"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/phonenumber1"
            android:gravity="center"
            android:layout_weight="0.8"
            android:textSize="13sp"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:weightSum="1.5"
            android:orientation="vertical"
            android:gravity="center">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.1"
                android:orientation="horizontal"
                android:gravity="center">
            <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_call"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:scaleType="fitCenter"
                    android:src="@drawable/phone_circle_red"/>
            <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_cancel"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:scaleType="fitCenter"
                    android:src="@drawable/cancel_circle_red"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>